{
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "downlevelIteration": true,
    "target": "ES2019",
    "baseUrl": ".",
    "module": "commonjs",
    "removeComments": false,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "jsx": "react",
    "composite": true,
    "paths": {
      "@browser-extension/*": [
        "./packages/browserExtension/src/*"
      ],
      "@core/*": [
        "./packages/core/src/*"
      ],
      "@core-tests/*": [
        "./packages/core/test/*"
      ],
      "@common-utils/*": [
        "./packages/common-utils/src/*"
      ],
      "@contracts-sdk/*": [
        "./packages/contracts-sdk/src/*"
      ],
      "@indexers/*": [
        "./packages/indexers/src/*"
      ],
      "@indexers-test/*": [
        "./packages/indexers/test/*"
      ],
      "@objects/*": [
        "./packages/objects/src/*"
      ],
      "@persistence/*": ["./packages/persistence/src/*"],
      "@signatureVerification/*": [
        "./packages/signatureVerification/src/*"
      ],
      "@test-harness/*": [
        "./packages/test-harness/src/*"
      ],
      "@utils/*": ["./packages/utils/src/*"]
    }
  }
}