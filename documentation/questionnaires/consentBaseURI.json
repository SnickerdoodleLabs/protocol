{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Consent Base URI",
  "type": "object",
  "required": [
    "name"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "image": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "brandName": {
      "type": "string"
    },
    "brandImage": {
      "type": "string"
    },
    "brandDescription": {
      "type": "string"
    },
    "attributes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "trait_type",
          "value"
        ],
        "properties": {
          "trait_type": {
            "type": "string"
          },
          "value": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "number"
              }
            ]
          }
        }
      }
    }
  }
}