// prettier-ignore
{
  "extends":  "@tsconfig/react-native/tsconfig.json", 
  "compilerOptions": {
    "skipLibCheck": true,                       
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "ES2022",
    "noImplicitAny":false,
    "experimentalDecorators": true,
    "paths":{
      "@assets/*":["./packages/mobile/assets/*"],
      "@mobile/*": [
        "./packages/mobile/src/*"
      ],

    }
},

"include": [
  "src"
],
"exclude": [
  "node_modules"
]
}
