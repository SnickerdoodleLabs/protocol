{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src/",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "ESNext"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../common-utils"
    },
    {
      "path": "../core"
    },
    {
      "path": "../objects"
    },
    {
      "path": "../persistence"
    }
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": true
  }
}