{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ES2022",
    "paths": {
      "@test-harness/*": [
        "./packages/test-harness/src/*"
      ],
      "@test-harness-test/*": [
        "./packages/test-harness/test/*"
      ],
    }
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../common-utils"
    },
    {
      "path": "../core"
    },
    {
      "path": "../objects"
    },
    {
      "path": "../persistence"
    }
  ]
}